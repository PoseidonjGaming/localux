{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .conn{margin: 10% ;}
</style>

<div class="example-wrapper">
  <div class="conn">
    <div class="card mb-4" style="width: 25rem;">
      <div class="card-body">
        <div class="col mb-4">
          {{form_start(form)}}
            <p>La formule  {{form_widget(form.laFormuleSC)}}</p>
            <p>Le mod√®le  {{form_widget(form.modele)}}</p>
          <p>Le jour  <input type='date' id="departPrevuD" name="departPrevuD" disabled/></p>
          <p>L'heure  <input type='time' id="departPrevuH" name="departPrevuH" disabled/></p><p></p>
          {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    
  $('#loc_sans_chauff_type_form_modele').change(function () {
    
    choice = $(this).children('option:selected').val()    
    
    if(choice !="" ){$('#departPrevuD').removeAttr('disabled');}
    else{$('#departPrevuD').attr('disabled','disabled');}    
  });
  $('#departPrevuD').change(function(){
    value=$(this).val().length;
    if(value==10){$('#departPrevuH').removeAttr('disabled');}
    else{$('#departPrevuH').attr('disabled','disabled');}
  });

 

</script>
{% endblock %}


